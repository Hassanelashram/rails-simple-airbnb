<div class="container">
  <div class="row">
    <div class="col-6">
      <%= simple_form_for @flat do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :number_of_guests %>
        <%= f.input :price_per_night %>
        <%= f.submit class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>
